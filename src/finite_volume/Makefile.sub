CC = gcc
CFLAGS += -c
INC = ../include
#Inclued folder
AR = ar
#Archive : creat static libs
ARFLAGS = crv
#AR options
RM = rm -vf

DIR_NAME = $(shell basename `pwd`)
#Current folder
FILES_C = $(shell ls *.c)
#All .c files

define compile_c_file #Compile all .c files
@for file in $(FILES_C); do \
( echo "$(CC) $(CFLAGS) $$file -I $(INC)" && $(CC) $(CFLAGS) $$file -I $(INC) ) \
done;
endef

define rm_o_file #Delete all .o files
@for file in $(FILES_O); do \
( $(RM) $$file ) \
done;
endef

all : compile archive
.PHONYP:all

compile:
	@echo "******************Compiling******************"
	$(call compile_c_file)
.PHONYP:compile

FILES_O = $(shell find ./ -name "*.o" -print)
#All .o files

archive:
	@echo "************Producing static libs************"
	@$(AR) $(ARFLAGS)  $(DIR_NAME).a $(FILES_O)
./PHONYP:archive

clean:
	@echo "******************Cleaning*******************"
	$(call rm_o_file)
	@$(RM) $(DIR_NAME).a
.PHONYP:clean
